{
  "name": "orange-kiosk-app",
  "version": "1.0.1",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
  "build": "electron-builder",
  "release:mac-x64": "electron-builder --mac --x64",
  "release:mac-arm64": "electron-builder --mac --arm64",
  "release:win-x64": "electron-builder --win --x64",
  "release:linux-x64": "electron-builder --linux --x64"
  },
  "build": {
    "appId": "com.orange.app",
    "productName": "orange-kiosk-app",
    "icon": "assets/icon.png",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/.*.swp"
    ],
    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb", "zip"]
    }
  },
  "keywords": [],
  "author": "devops.crc@tii.ae",
  "license": "ISC",
  "description": "Orange Kiosk App â€“ Secure, cross-platform kiosk application.",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  }
}
